public class Magazzino {
    double guadagno;
    double spesa;
    int nPezzi;

    public Magazzino(double guadagno, double spesa, int nPezzi) {
        this.guadagno = guadagno;
        this.spesa = spesa;
        this.nPezzi = nPezzi;
        if (nPezzi == 0) {
            try {
                throw new Exception("hai finito i pezzi non puoi pi√π vendere");
            } catch (Exception e) {
                throw new RuntimeException(e);
            }
        }
    }
}
